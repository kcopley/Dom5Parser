<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dom5Editor"
        xmlns:Mods="clr-namespace:Dom5Edit;assembly=Dom5Edit"
         x:Class="Dom5Editor.MainWindow"
        mc:Ignorable="d"
        Title="Dominions 5 Mod Tools" Height="800" Width="1208">
    <Window.Resources>
        <ResourceDictionary Source="MainTemplates.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="ModTools" HorizontalAlignment="Left" Height="769" VerticalAlignment="Top" Width="1200" Grid.ColumnSpan="2" Background="#FFE5E6E6">
            <TabItem x:Name="ModMerger" Header="Merge Tool">
                <local:MergerMenuTab HorizontalAlignment="Left" Width="1194"/>
            </TabItem>
            <TabItem x:Name="ModEditor" Header="Mod Editor" IsEnabled="True">
                <local:ModView />
            </TabItem>
        </TabControl>

    </Grid>
</Window>
